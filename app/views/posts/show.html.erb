<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.details %>
</p>

<%= link_to "Publish Post", publish_post_path(@post), class: "float-right btn btn-primary", method: :post if @post.user == current_user && !@post.publish %>

<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Back', posts_path, class: "btn btn-primary" %>
